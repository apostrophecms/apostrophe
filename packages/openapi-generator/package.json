  "scripts": {},
  "keywords": [
    "apostrophecms",
    "cms",
    "openapi",
    "swagger",
    "openapi-generator",
    "api",
    "documentation",
    "specification",
    "yaml",
    "swagger-ui",
    "redoc"
  ],
  "license": "MIT",
  "author": "Apostrophe Technologies, Inc.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/apostrophecms/openapi-generator.git"
  },
  "bugs": {
    "url": "https://github.com/apostrophecms/openapi-generator/issues"
  },
  "homepage": "https://github.com/apostrophecms/openapi-generator#readme",
  "type": "module",
  "main": "index.js",
  "exports": {
    ".": {
      "import": "./index.js",
      "require": "./index.js"
    }
  },
  "files": [
    "index.js",
    "lib/",
    "templates/",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@apidevtools/swagger-parser": "^12.0.0",
